<idea-plugin>
  <id>com.rahulrav.baseline-profiles</id>
  <name>Baseline-Profiles-Idea</name>
  <vendor>rahulrav</vendor>

  <!-- Product and plugin compatibility requirements -->
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService
        serviceImplementation="com.rahulrav.baseline.services.ApplicationService"/>
    <projectService
        serviceImplementation="com.rahulrav.baseline.services.ProjectService"/>
    <fileType name="baseline"
        implementationClass="com.rahulrav.baseline.BaselineFileType"
        extensions="txt"
        language="baseline"
        fieldName="instance"/>
  </extensions>

  <applicationListeners>
    <listener class="com.rahulrav.baseline.listeners.Listener"
        topic="com.intellij.openapi.project.ProjectManagerListener"/>
  </applicationListeners>
</idea-plugin>
